#!/usr/bin/env sh

[ -n "$PAINT" ] && pkill -USR1 Xephyr

xrdb $HOME/.Xdefaults

xsetroot -solid SpringGreen

setxkbmap dvorak
[ -f $HOME/.xmodmap.dvorak ] && xmodmap $HOME/.xmodmap.dvorak

echo "######## HOLOWM START ########"
if [ -n "$VALGRIND" ]; then
    #--leak-check=full \
    #--show-reachable=yes \
  valgrind \
    --partial-loads-ok=yes \
    --undef-value-errors=no \
    ruby ./bin/holowm
else
  ./bin/holowm
fi
echo "######## HOLOWM END ##########"
