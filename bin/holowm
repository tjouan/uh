#!/usr/bin/env ruby

require 'holo'
require 'holo/wm'


wm = Holo::WM.new do
  key(:XK_q)          { quit }
  key(:XK_Return)     { execute 'urxvt' }
  key(:XK_f)          { execute 'urxvt' }
  key(:XK_f, :shift)  { execute 'xterm' }

  key(:XK_t)          { layout_sel_next }
  key(:XK_n)          { layout_sel_prev }

  key(:XK_l)          { log_clients }
  key(:XK_BackSpace)  { log_line }
end

wm.run
