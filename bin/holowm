#!/usr/bin/env ruby

require 'holo'
require 'holo/wm'


wm = Holo::WM.new do
  key(:XK_q)         { quit }
  key(:XK_Return)    { execute 'xterm' }
  key(:XK_f)         { execute 'urxvt' }

  key(:XK_t)         { focus_next_client }
  key(:XK_n)         { focus_prev_client }

  key(:XK_l)         { log_clients }
  key(:XK_BackSpace) { log_line }
end

wm.run
