#!/usr/bin/env ruby

require 'holo'
require 'holo/wm'


wm = Holo::WM.new do
  key(:q)         { quit }
  key(:Return)    { execute 'xterm' }
  key(:f)         { execute 'urxvt' }

  key(:t)         { focus_next_client }
  key(:n)         { focus_prev_client }

  key(:l)         { log_clients }
  key(:BackSpace) { log_line }
end

wm.run
